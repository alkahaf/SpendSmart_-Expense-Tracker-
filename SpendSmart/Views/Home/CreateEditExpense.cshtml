@{
    ViewData["Title"] = "Create / Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit expense</h1>

</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    
    <input hidden class="form-control" placeholder="0" type="number" asp-for="Id" />

    <label class="mt-4">Value $</label>
    <input class="form-control" placeholder="0" type="number" asp-for="Value" step="0.01" />

    <label class="mt-4">Description</label>
    <input class="form-control" placeholder="Add a Description" type="text" asp-for="Description"  />

    <button class="btn btn-primary mt-4" type="submit">Submite</button>

</form>